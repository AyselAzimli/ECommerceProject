@model ProductViewModel

<div class="modal fade modalDemo popup-quickview" id="quick_view_@Model.Id">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="header">
                <span class="icon-close icon-close-popup" data-bs-dismiss="modal"></span>
            </div>

            <div class="wrap">

                <!-- Product Images -->
                <div class="tf-product-media-wrap">
                    <div dir="ltr" class="swiper tf-single-slide">
                        <div class="swiper-wrapper">
                            <img src="~/images/products/@Model.CoverImageName"
                                 alt="@Model.Name"
                                 style="width: 100%; height: auto; object-fit: cover;">
                        </div>
                        <div class="swiper-button-next button-style-arrow single-slide-prev"></div>
                        <div class="swiper-button-prev button-style-arrow single-slide-next"></div>
                    </div>
                </div>

                <!-- Product Info -->
                <div class="tf-product-info-wrap position-relative">
                    <div class="tf-product-info-list">

                        <!-- Title -->
                        <div class="tf-product-info-title">
                            <h5>
                                <a class="link" href="product-detail.html">@Model.Name</a>
                            </h5>
                        </div>

                        <!-- Badges -->
                        <div class="tf-product-info-badges">
                            <div class="badges text-uppercase">Best seller</div>
                            <div class="product-status-content">
                                <i class="icon-lightning"></i>
                                <p class="fw-6">Selling fast! 48 people have this in their carts.</p>
                            </div>
                        </div>

                        <!-- Price -->
                        <div class="tf-product-info-price">
                            <div class="price">$@Model.Variants?.FirstOrDefault()?.Price</div>
                        </div>

                        <!-- Description -->
                        <div class="tf-product-description">
                            <p>@Model.Description</p>
                        </div>

                        <!-- Size Picker -->
                        <div class="tf-product-info-variant-picker">
                            <div class="variant-picker-label">
                                Size: <span class="fw-6 variant-picker-label-value">@Model.Variants?.FirstOrDefault()?.Name</span>
                            </div>
                            <div class="variant-picker-item">
                                <div class="variant-picker-values">

                                    @{
                                        var isFirst = true;

                                        foreach (var item in Model.Variants ?? [])
                                        {
                                            <input type="radio"
                                                   name="size-@Model.Id"
                                                   id="values-@item.Name-@Model.Id"
                                            @(isFirst ? "checked" : "") />

                                            <label class="style-text"
                                                   for="values-@item.Name-@Model.Id"
                                                   data-value="@item.Name"
                                                   data-price="@item.Price">
                                                <p>@item.Name</p>
                                            </label>

                                            isFirst = false;
                                        }
                                    }


                                </div>
                            </div>
                        </div>

                        <!-- Quantity -->
                        <div class="tf-product-info-quantity">
                            <div class="quantity-title fw-6">Quantity</div>
                            <div class="wg-quantity">
                                <span class="btn-quantity minus-btn">-</span>
                                <input type="text" name="number" value="1">
                                <span class="btn-quantity plus-btn">+</span>
                            </div>
                        </div>

                        <!-- Buy Buttons -->
                        <div class="tf-product-info-buy-button">
                            <form>
                                <a href="#" class="tf-btn btn-fill justify-content-center fw-6 fs-16 flex-grow-1 animate-hover-btn btn-add-to-cart">
                                    <span>Add to cart</span>
                                    <span class="tf-qty-price">$@(Model.Variants?.FirstOrDefault()?.Price ?? 0)</span>
                                </a>

                                <a href="#" class="tf-product-btn-wishlist hover-tooltip box-icon bg_white wishlist btn-icon-action">
                                    <span class="icon icon-heart"></span>
                                    <span class="tooltip">Add to Wishlist</span>
                                    <span class="icon icon-delete"></span>
                                </a>

                                <a href="#compare" data-bs-toggle="offcanvas" aria-controls="offcanvasLeft" class="tf-product-btn-wishlist hover-tooltip box-icon bg_white compare btn-icon-action">
                                    <span class="icon icon-compare"></span>
                                    <span class="tooltip">Add to Compare</span>
                                    <span class="icon icon-check"></span>
                                </a>

                                <div class="w-100">
                                    <a href="#" class="btns-full">
                                        Buy with <img src="~/images/payments/paypal.png" alt="PayPal">
                                    </a>
                                    <a href="#" class="payment-more-option">More payment options</a>
                                </div>
                            </form>
                        </div>

                        <!-- View Details Link -->
                        <div>
                            <a asp-controller="product" asp-action="details" asp-route-id="@Model.Id" class="tf-btn fw-6 btn-line">
                                View full details<i class="icon icon-arrow1-top-left"></i>
                            </a>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>







<script>
    document.addEventListener('DOMContentLoaded', function () {
        const quickViewModals = document.querySelectorAll('.popup-quickview');

        quickViewModals.forEach(modal => {
            const variantRadios = modal.querySelectorAll('input[type="radio"][name^="size-"]');
            const priceDisplay = modal.querySelector('.tf-product-info-price .price');
            const cartPriceDisplay = modal.querySelector('.tf-qty-price');
            const variantLabel = modal.querySelector('.variant-picker-label-value');
            const quantityInput = modal.querySelector('input[name="number"]');
            const minusBtn = modal.querySelector('.minus-btn');
            const plusBtn = modal.querySelector('.plus-btn');
            const variants = {};

            variantRadios.forEach(radio => {
                const label = modal.querySelector(`label[for="${radio.id}"]`);
                if (label) {
                    const variantName = label.dataset.value;
                    const variantPrice = label.dataset.price;
                    variants[radio.id] = {
                        name: variantName,
                        price: parseFloat(variantPrice)
                    };
                }
            });

            function updatePrices() {
                const selectedRadio = modal.querySelector('input[type="radio"][name^="size-"]:checked');
                if (selectedRadio && variants[selectedRadio.id]) {
                    const variant = variants[selectedRadio.id];
                    const quantity = parseInt(quantityInput.value) || 1;
                    const totalPrice = (variant.price * quantity).toFixed(2);

                    priceDisplay.textContent = `$${variant.price.toFixed(2)}`;
                    cartPriceDisplay.textContent = `$${totalPrice}`;
                    variantLabel.textContent = variant.name;
                }
            }

            variantRadios.forEach(radio => {
                radio.addEventListener('change', updatePrices);
            });

            if (minusBtn) {
                minusBtn.addEventListener('click', function () {
                    setTimeout(updatePrices, 50);
                });
            }

            if (plusBtn) {
                plusBtn.addEventListener('click', function () {
                    setTimeout(updatePrices, 50);
                });
            }

            if (quantityInput) {
                quantityInput.addEventListener('input', updatePrices);
                quantityInput.addEventListener('change', updatePrices);
            }

            modal.addEventListener('shown.bs.modal', function () {
                updatePrices();
            });
        });
    });


</script> 